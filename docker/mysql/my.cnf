# ============================================
# Configuración Personalizada MySQL
# Sistema de Gestión de Citas - Neita's Barber Shop
# ============================================

[mysqld]
# ============================================
# Configuración General
# ============================================
default-time-zone = '-05:00'
character-set-server = utf8mb4
collation-server = utf8mb4_unicode_ci
default-authentication-plugin = mysql_native_password

# ============================================
# Configuración de Conexiones
# ============================================
max_connections = 200
max_connect_errors = 100
connect_timeout = 10
wait_timeout = 600
interactive_timeout = 600

# ============================================
# Configuración de InnoDB
# ============================================
# Buffer Pool (ajustar según RAM disponible)
innodb_buffer_pool_size = 512M
innodb_buffer_pool_instances = 2

# Log Files
innodb_log_file_size = 128M
innodb_log_buffer_size = 16M
innodb_flush_log_at_trx_commit = 2
innodb_flush_method = O_DIRECT

# Performance
innodb_file_per_table = 1
innodb_open_files = 400
innodb_io_capacity = 400
innodb_io_capacity_max = 800

# ============================================
# Configuración de Query Cache (MySQL 5.7)
# ============================================
# Nota: Query cache está deprecado en MySQL 8.0
# query_cache_type = 1
# query_cache_size = 32M
# query_cache_limit = 2M

# ============================================
# Configuración de Tablas Temporales
# ============================================
tmp_table_size = 64M
max_heap_table_size = 64M

# ============================================
# Configuración de Logs
# ============================================
# General Log (desactivado en producción)
general_log = 0
general_log_file = /var/log/mysql/general.log

# Error Log
log_error = /var/log/mysql/error.log

# Slow Query Log
slow_query_log = 1
slow_query_log_file = /var/log/mysql/slow-query.log
long_query_time = 2

# Binary Log (para replicación)
# server-id = 1
# log_bin = /var/log/mysql/mysql-bin.log
# expire_logs_days = 7
# max_binlog_size = 100M

# ============================================
# Configuración de Seguridad
# ============================================
# Deshabilitar LOCAL INFILE
local_infile = 0

# Límites de paquetes
max_allowed_packet = 64M

# ============================================
# Configuración de MyISAM (legacy)
# ============================================
key_buffer_size = 32M
read_buffer_size = 2M
read_rnd_buffer_size = 8M
sort_buffer_size = 4M
join_buffer_size = 4M

# ============================================
# Configuración del Cliente
# ============================================
[client]
default-character-set = utf8mb4
port = 3306
socket = /var/run/mysqld/mysqld.sock

# ============================================
# Configuración de mysqldump
# ============================================
[mysqldump]
quick
quote-names
max_allowed_packet = 64M

# ============================================
# Configuración de mysql
# ============================================
[mysql]
default-character-set = utf8mb4
